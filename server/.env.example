# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password_here
DB_NAME=todolist_cloud

# JWT Configuration
# SECURITY: Generate a strong random secret key (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_required
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Backup Configuration
# SECURITY: Generate a strong encryption key
# Example: openssl rand -base64 32
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_minimum_32_characters

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Environment
NODE_ENV=development
